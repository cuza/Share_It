{% extends 'UserBundle::layout.html.twig' %}

{% block content %}
    <div>
        <h1>Log list</h1>

        <table class="table table-condensed table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Date</th>
                <th>Data</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('log_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.description }}</td>
                    <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td><div class="prettyprint linenums">{% debug entity.data %}</div></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('log_show', { 'id': entity.id }) }}">
                                    <i class="icon-list-alt" style="color: #000"></i> Show</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
