{% extends 'UserBundle::layout.html.twig' %}

{% block content %}
    <div class="span5">
        <h1>Log</h1>

        <table class="table table-condensed table-striped table-hover table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td><div class="prettyprint linenums">{% debug entity.data %}</div></td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="span2">
        <ul class="record_actions">
            <li>
                <a href="{{ path('log') }}">
                    <i class="icon-list" style="color: #000"></i> Back to the list
                </a>
            </li>
        </ul>
    </div>
{% endblock %}