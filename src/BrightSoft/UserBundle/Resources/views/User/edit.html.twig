{% extends 'UserBundle::layout.html.twig' %}

{% block content %}
    <div class="span3 offset2 form">
        <h1>User edit</h1>

        <form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
            <p>
                <button class="btn btn-primary" type="submit"></i>Edit</button>
            </p>
        </form>
    </div>
    <div class="span2">
        <ul class="record_actions">
            <li>
                <a href="{{ path('user') }}">
                    <i class="icon-list" style="color: #000"></i> Back to the list
                </a>
            </li>
            <li>
                <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-small btn-danger" type="submit">
                        <i class="icon-remove icon-white"></i> Delete
                    </button>
                </form>
            </li>
        </ul>
    </div>
{% endblock %}