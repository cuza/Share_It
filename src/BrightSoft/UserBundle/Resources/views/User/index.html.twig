{% extends 'UserBundle::layout.html.twig' %}

{% block content %}
    <div>
        <h1>User list</h1>

        <table class="table table-condensed table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Pass</th>
                <th>Slug</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.pass }}</td>
                    <td>{{ entity.slug }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': entity.id }) }}">
                                    <i class="icon-list-alt" style="color: #000"></i> Show</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': entity.id }) }}">
                                    <i class="icon-edit" style="color: #000"></i> Edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('user_new') }}">
                    <i class="icon-plus" style="color: #000"></i> Create a new entry
                </a>
            </li>
        </ul>
    </div>
{% endblock %}