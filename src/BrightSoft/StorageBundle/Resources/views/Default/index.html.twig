{% extends 'StorageBundle::layout.html.twig' %}

{% block content %}
    {% if msg %}
        <div class="alert alert-info fade in out">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <h4 class="alert-heading">Message!</h4>

