<div class="searchbox">
    <div class="search">
        <form action="{{ path('search') }}" id="search" class="form-search">
            <input type="hidden" id="filter" name="f" value="">

            <div class="controls input-append span12">
                <input name="q" placeholder="Search Files" type="text" required="true"
                       class="search-query">
                <button type="submit" class="btn btn-primary">
                    <i class="icon-search icon-white"></i>
                </button>
            </div>
            <div class="cfilter row">
                <a href="#" onclick="cfilter('file','Files')" class="file">Files</a>
                <a href="#" onclick="cfilter('video','Videos')" class="video">Videos</a>
                <a href="#" onclick="cfilter('music','Music')" class="music">Music</a>
                <a href="#" onclick="cfilter('photo','Photos')" class="photo">Photos</a>
                <a href="#" onclick="cfilter('book','Books')" class="book">Books</a>
                <a href="#" onclick="cfilter('games','Apps')" class="games">Apps</a>
                <a href="#" onclick="cfilter('archives','Archives')" class="archives">Archives</a>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    function cfilter(c, val) {
        var cf = $('.cfilter');
        cf.find('a').removeClass('clicked');
        cf.find('a[class*="' + c + '"]').addClass('clicked');
        $('#filter').val(val);
    }
</script>
