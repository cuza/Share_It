{% extends 'StorageBundle::layout.html.twig' %}

{% block content %}
<h1>Category edit</h1>

<form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-primary" type="submit"><i class="icon-edit icon-white"></i>Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            <i class="icon-list"></i> Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-small btn-danger" type="submit"><i class="icon-remove icon-white"></i> Delete</button>
        </form>
    </li>
</ul>
{% endblock %}