{% extends 'StorageBundle::layout.html.twig' %}

{% block content %}
<h1>Category list</h1>

<table class="table table-condensed table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Icon</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.icon }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('category_show', { 'id': entity.id }) }}"><i class="icon-list-alt"></i> Show</a>
                    </li>
                    <li>
                        <a href="{{ path('category_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> Edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('category_new') }}">
            <i class="icon-plus"></i> Create a new entry
        </a>
    </li>
</ul>
{% endblock %}