{% extends 'StorageBundle::layout.html.twig' %}

{% block content %}
    <div id="search" class="row-fluid">
        <div class=" span8 offset2">
            {% include 'StorageBundle:Default:includes/searchbox.html.twig' %}
        </div>
    </div>
    <div class="add-senses well row-fluid">

    </div>
    <div class="row-fluid">
        <div class="add-senses span4"></div>
        <div class="span8 well well-small">
            <h1><a href="{{ path('get_file',{'id':entity.id}) }}" class="btn btn-large btn-primary"><i
                    class="icon-download-alt icon-white"></i> Download</a></h1>

            <table class="table table-condensed table-striped table-hover table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td class="file-name {{ entity.icon }}-ext">
                        <span class="name">{{ entity.name }}.{{ entity.ext }}</span>
                    </td>
                </tr>
                <tr>
                    <th>Modification Date</th>
                    <td>{{ entity.mDate|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Size</th>
                    <td>{{ entity.size }}</td>
                </tr>
                <tr>
                    <th>Shared</th>
                    <td>{% if entity.shared %}Yes{% else %}No{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
