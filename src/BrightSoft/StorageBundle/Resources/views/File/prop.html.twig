<h1>File</h1>

<table class="table table-condensed table-striped table-hover table-bordered">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>Name</th>
        <td class="file-name {{ entity.icon }}-ext">
            <span class="name">{{ entity.name }}.{{ entity.ext }}</span>
        </td>
    </tr>
    <tr>
        <th>Modification Date</th>
        <td>{{ entity.mDate|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
        <th>Size</th>
        <td>{{ entity.size }}</td>
    </tr>
    <tr>
        <th>Shared</th>
        <td>{% if entity.shared %}Yes{% else %}No{% endif %}</td>
    </tr>
    </tbody>
</table>